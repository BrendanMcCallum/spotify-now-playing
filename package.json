{
  "name": "spotify-playing-now",
  "version": "0.1.0",
  "description": "Spotify now playing popup for macOS menu bar",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.electron.spotify-now-playing",
    "productName": "Spotify - now playing",
    "copyright": "Copyright Â© 2018 davicorreiajr",
    "mac": {
      "category": "public.app-category.music",
      "target": "dmg"
    },
    "files": [
      "src/**/*",
      "package.json",
      "env.json"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/davicorreiajr/spotify-now-playing.git"
  },
  "author": "davicorreiajr",
  "license": "MIT",
  "devDependencies": {
    "electron": "^3.0.9",
    "electron-builder": "^20.36.2",
    "eslint": "^5.9.0"
  },
  "dependencies": {
    "electron-fetch": "^1.3.0",
    "nconf": "^0.10.0"
  }
}
